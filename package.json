{
  "name": "briefkasten-scraper",
  "version": "0.0.1",
  "description": "Briefkasten missing image job",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node ./index.js"
  },
  "keywords": [
    "playwright",
    "bookmarks",
    "screenshots"
  ],
  "author": "ndom91 <yo@ndo.dev>",
  "license": "MIT",
  "dependencies": {
    "imagekit": "^3.2.5",
    "mysql2": "^2.3.3",
    "playwright": "^1.22.2"
  },
  "devDependencies": {
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lint-staged": "^13.0.0",
    "simple-git-hooks": "^2.8.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowSpacing": true
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,json}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
